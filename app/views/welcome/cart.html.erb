<section class="fix">
<% if @cart.product.present? %>
	<section id="cart_items">
		<div class="container">
			<div class="table-responsive cart_info">
				<table class="table table-condensed">
					<thead>
						<tr class="cart_menu">
							<td class="image">Item</td>
							<td class="description"></td>
							<td class="price">Price</td>
							<td class="quantity">Quantity</td>
							<td class="total">Total</td>
							<td></td>
						</tr>
					</thead>
          <% @cart.each do |product| %>
            <tbody>
              <tr>
                <td class="cart_product">
                  <% if product.image.attached? %>
                    <img src="<%= url_for(product.image)%>" style="height: 80px; width: 70px;">
                    <% end %>
                    <h3><%= product.name %></h3>
                </td>
                <td class="cart_description">
                  <p>Description: <%= product.short_description %></p>
                  <%# <p>SKU NO.</p> %>
                <p>SKU no. : <%= product.sku %></p>
                </td>
                <td class="cart_price">
                  <p>US$ <%= product.price %></p>
                </td>
                <td class="cart_quantity">
                  <div class="cart_quantity_button">
				  <div style="display:flex;" >
                    <%= button_to '+', add_quantity_path(product) , method: :post, data: { turbo: true} %>                  
                    <span style="padding: 5px;">  <%= product.quantity %>  </span>
                    <%= button_to '-', dec_quantity_path(product), method: :post, remote: true, data: { 'turbo-method' => :post } %>
                  </div>
				  </div>
                </td>
                <td class="cart_total">
                   <p>US$ <%= (product.price) * (product.quantity) %></p>
                </td>
                <td class="cart_delete">
					      <%= button_to "X", remove_from_cart_path(product), method: :delete %>
                  <%# <a class="cart_quantity_delete" href=""><i class="fa fa-times"></i></a> %>
                </td>
              </tr>
            </tbody>
          <% end %>
				</table> 
			</div>
		</div>
	</section> <!--/#cart_items-->

	<section id="do_action">
		<div class="container">
			<div class="heading">
				<h3>What would you like to do next?</h3>
				<p>Choose if you have a discount code or reward points you want to use or would like to estimate your delivery cost.</p>
			</div>
			<div class="row">
				<div class="col-sm-6">
					<div class="chose_area">
						<ul class="user_option">
							<li>
								<%= form_with model: @coupon, url: welcome_cart_path,  local: true,data: { turbo: false } do |form| %>
									<ul class="user_option">
										<li>
											<div class="mb-3">
												<%= form.label :coupon_code %>
												<%= form.text_field :coupon_code,required: true, class: "form-control" , placeholder: "enter coupon code" %>
											</div>
										</li>
										<li>
											<div class="mb-3">
												<%= form.submit "Apply", class: "btn btn-primary" %>
											</div>
                    </li>
									</ul>
								<% end %>
							</li>
						</ul>
					</div>
				</div>
				<div class="col-sm-6">
					<div class="total_area">
						<ul>
							<li>Cart Sub Total <span><%= @value %></span><span> US$</span></li>
							<% if  @shipping_cost.present? %>
								<li>Shipping Cost <span><%= @shipping_cost %></span><span> US$</span></li>
							<%end%>
							<% if @f_value.present? %>
								<li>Total <span><%= @f_value %></span><span>US$<span>
							<% end %>
						</ul>
						<%if @f_value == 0 %>
								<br><h6 style="color:red"><%= "No products in the cart" %></h6>
							<%else%>
								<span class="btn btn-default check_out" href=""><%= link_to "Checkout", welcome_checkout_path %> </span>
							<%end%>
						<%# <a href="checkout.html", style="padding: 40px;"><i class="fa fa-shopping-cart"></i> Checkout</a> %>
					</div>
				</div>
			</div>
		</div>
	</section><!--/#do_action-->
<% else %>
	<div style="padding-left: 23%;">
	<%= image_tag("home/empty_cart1.png", alt: "", class: "girl img-responsive") %>
	</div>
<% end %>
	
</section>

  