<div class="container-fluid fix">
  <div class="row">
    <div class="col-md-4" style="margin-top: 50px;padding-bottom: 30px;">
     
     <%= image_tag("shop/track_order.png", alt: "track order") %>

    </div>
    <div class="col-md-6">
			<div class="track_order">
			<%= form_with model: @orders, url: welcome_track_path, method: :post,local: true,data: { turbo: false } do |form| %>
					<div class="mb-3">
					<h1 style="padding-top: 20px;">Track your order here!</h1>
					<i>Enter order id:</i><%= form.text_field :user_order_id %>
					</div>
					<div class="mb-3">
							<%= form.submit "Submit", class: "btn btn-primary" %>
					</div>
			<% end %>
			<b><i>Order status: </i><%= @user_order.present? ? @user_order.status : @error %></div></b>
    </div>
      
    </div>
  </div>
</div>


