
	<section id="cart_items">
		<div class="container">
			<div class="breadcrumbs">
				<ol class="breadcrumb">
				  <li><a href="#">Home</a></li>
				  <li class="active">Check out</li>
				</ol>
		</div><!--/breadcrums-->

			

      <%# displaying user address %>
      <div class="container" > 
        <% if @address.present? %>
            <h3 style="color:red"> Delivery address </h3>
            <p>Address1: <%= @address.address_1 %></p>
            <p>Contact no.: <%= @address.mobile_no %></p>
            <p>State: <%= @address.state %></p>
            <p>Country: <%= @address.country %></p>
            <p>Zipcode: <%= @address.pincode %></p>
        <% else %>
          <div></div>  
        <%end%>
      </div>


			<div class="register-req">
				<p>Please use Register And Checkout to easily get access to your order history, or use Checkout as Guest</p>
			</div><!--/register-req-->

			<%# form %>
      <h3><b style="color:red" >Add new delivery address</b></h3>
			<div class="form-one">
				<%= form_with model: @address, url: welcome_create_path, method: :post, local: true do |form| %>
					<div class="field">
					  	<%= form.label :first_Name %>  
							<%= form.text_field :fname %><br>
							<%= form.label :Last_Name %>
							<%= form.text_field :lname %><br>
							<%= form.label :address_1 %>
							<%= form.text_field :address_1 %><br>
							<%= form.label :email_id  %>
							<%= form.email_field :email %><br>
						  	<%= form.label :pincode %>
							<%= form.number_field :pincode %>
							<%= form.select :country, options_for_select( [['India','India'],['Australia','Australia']])%>
							<%= form.select :state, options_for_select( [['MAHARASHTRA','MAHARASHTRA'],['Bihar','Bihar'],['DELHI','DELHI'],['Uttar pradesh','Uttar pradesh']])%>
              				<%= form.label :mobile_no %>
							<%= form.number_field :mobile_no %>
							<div class="actions">
								<%= form.submit %>
							</div>
				<% end %>
			<div class="review-payment">
				<h2>Review & Payment</h2>
			</div>
     		<span>
		    <h4>Pay with Stripe<%= button_to "Stripe Pay", welcome_stripe_path, method: :get %></h4>
			</span>
			<span>
			<h4>Pay on COD<%= button_to "COD", welcome_cod_path, method: :get %>
			</span>
		</div>				
	</section> <!--/#cart_items-->

	
</body>
</html>