<h1>Order details</h1>
<p>User email_id: <%= @user.email %> </p>
<p>User Order_id: <%= @order.id %>
<table class="table">
<p>Total amount: <%= @f_value %>
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Quantity</th>
      <th scope="col">Price</th>
      <th scope="col">Status</th>
    </tr>
  </thead>
  <tbody>
  
  <% @order.products.each do |product| %>
    <tr>
      <td><%= product.name %> <img src="<%#= url_for(product.image) %>" style="height: 130px; width: 200px;"></td>
      <td><%= product.quantity %></td>
      <td>USD $<%= product.price %></td>
      <td><%= @order.status %></td>
    </tr>
  <% end %>
    
  </tbody>
  
</table>